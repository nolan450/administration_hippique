<div class="col-12">

    <a class="btn btn-primary float-right mb-3" href="{{ path('app_items_new') }}">Create new</a>

</div>
<div class="col-12">
    <div class="card">
        <div class="card-body">

    <table class="table" id="chevaux">
        <thead>
            <tr>
                <th>Id</th>

                <th>Type</th>
                <th>Niveau</th>
                <th>Description</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.id }}</td>

                <td>{{ item.type }}</td>
                <td>{{ item.niveau }}</td>
                <td>{{ item.description }}</td>
                <td>{{ item.prix }}</td>
                <td>
                    <a href="{{ path('app_items_show', {'id': item.id}) }}">show</a>
                    <a href="{{ path('app_items_edit', {'id': item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </div>
    </div>
</div>
{% endblock %}

